<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                bestsellerreport_report_listing.bestsellerreport_report_listing_data_source
            </item>
        </item>
    </argument>

    <settings>
        <spinner>columns</spinner>
        <deps>
            <dep>bestsellerreport_report_listing.bestsellerreport_report_listing_data_source</dep>
        </deps>
    </settings>

    <!-- DATA SOURCE -->
    <dataSource name="bestsellerreport_report_listing_data_source"
                component="Magento_Ui/js/grid/provider">

        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">sku</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>

        <dataProvider name="bestsellerreport_report_listing_data_source"
            class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">

            <settings>
                <requestFieldName>sku</requestFieldName>
                <primaryFieldName>sku</primaryFieldName>
            </settings>

        </dataProvider>
    </dataSource>

    <!-- TOOLBAR -->
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
        <exportButton name="export_button"/>
    </listingToolbar>

    <!-- COLUMNS -->
    <columns name="columns">

        <selectionsColumn name="ids">
    <settings>
        <indexField>sku</indexField>
    </settings>
</selectionsColumn>

        <column name="month">
            <settings>
                <filter>text</filter>
                <label>Month</label>
            </settings>
        </column>

        <column name="sku">
            <settings>
                <filter>text</filter>
                <label>SKU</label>
            </settings>
        </column>

        <column name="name">
            <settings>
                <filter>text</filter>
                <label>Product</label>
            </settings>
        </column>

        <column name="qty_ordered">
            <settings>
                <filter>text</filter>
                <label>Qty Sold</label>
            </settings>
        </column>

    </columns>
</listing>